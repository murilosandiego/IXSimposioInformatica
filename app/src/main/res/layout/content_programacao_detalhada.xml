<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.edu.ifnmg.ixsimposioinformatica.activity.ProgramacaoDetalhadaActivity"
    tools:showIn="@layout/activity_programacao_detalhada">

    <TextView
        android:id="@+id/txvProgramacaoDetalhadaTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txvDetalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txvProgramacaoDetalhadaTitulo"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/txvHorario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txvDetalhe"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txvPalestrante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txvHorario"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />


</RelativeLayout>
